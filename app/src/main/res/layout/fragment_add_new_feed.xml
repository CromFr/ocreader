<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/materialize_screen_edge">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/feed_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/feed_url"
                android:inputType="textUri"
                android:lines="1"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/materialize_baseline_grid_small"
            android:layout_marginTop="@dimen/materialize_spacing"
            android:labelFor="@+id/folder"
            android:text="@string/folder"
            android:textAppearance="@style/TextAppearance.Design.Hint"/>

        <Spinner
            android:id="@+id/folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>